@{
    ViewData["Title"] = "Pergunta [x]";
}

@model ButtonBattle.Models.QuestionViewModel;

<main>
    <div id="game" class="background">
        <div id="wait-timer">3</div>
        <div id="question-info">
            <div class="info">
                <div class="player-info">
                    <div class="player-name">Jogador 1</div>
                    <div class="player-color-blue"></div>
                    <div class="player-points">0</div>
                </div>
                <div class="player-info">
                    <div class="player-name">Jogador 2</div>
                    <div class="player-color-red"></div>
                    <div class="player-points">0</div>
                </div>
            </div>
            <div id="cronometer" style="display: none;">
                <div class="seconds"></div>
                <img class="icon" src="~/img/cronometer.png">
            </div>
            <div class="characters">
                <img id="player-1" src="/img/man.png">
                <img src="/img/showman.png">
                <img id="player-2" src="/img/woman.png">
            </div>
            <div class="label">
                <p class="question">
                    @Model.Question
                </p>
                <div class="options">
                    <div id="a" class="option">@Model.OptionA</div> <!--classe para correto: correct-->
                    <div id="b" class="option">@Model.OptionB</div> <!--classe para incorreto: wrong-->
                    <div id="c" class="option">@Model.OptionC</div>
                    <div id="d" class="option">@Model.OptionD</div>
                    <div id="e" class="option">@Model.OptionE</div>
                </div>
            </div>
            <form asp-controller="Game" asp-action="NextQuestion" method="post">
                <input type="text" name="theme" style="display: none;" value="@Model.Theme"/>
                <input class="next" type="submit" value="PrÃ³ximo"/>
            </form>
        </div>
    </div>
</main>
<script src="~/js/script.js"></script>